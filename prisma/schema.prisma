// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  image    String?
  email    String    @unique
  password String
  role     Role      @default(USER)
  name     String
  address  String
  bookings Booking[]

  @@map("users")
}

model Service {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String @unique
  image       String
  description String
  price       Float
  length      Int
  booking     Booking[]
  features    String[]

  @@map("services")
}

model Booking {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  serviceId   String   @db.ObjectId
  service     Service  @relation(fields: [serviceId], references: [id])
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  status      Status   @default(PENDING)
  startDate   DateTime
  description String

  @@map("bookings")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum Status {
  PENDING
  CONFIRMED
  CANCELLED
  DONE
}
